<!DOCTYPE html>
<html>
  <head>
    <title>Mosaic</title>
    <style>
        * { box-sizing: border-box; }
        body { margin: 0; padding: 0; }
        .container { margin: auto; position: relative; max-width: 100%; max-height: 100%; }
        .logo { position: absolute; top: 0; bottom: 0; left: 0; right: 0; opacity: 0.2; }
        .svg-wrapper { width: calc(100% / <%= hSize %>); height: calc(100% / <%= vSize %>); float: left; }
        .svg-wrapper div { display: flex; width: 100%; height: 100%; }
        .svg-wrapper img { width: 100%; height: 100%; opacity: 0.8; padding: 20%; }
    </style>
  </head>
  <body>
    <div class="container" style="display: none;">
      <img class="logo" src="<%= mainLogo %>" alt="<%= mainLogo.split('/').pop() %>" />
      <% svgs.forEach((svg) => { %>
        <div class="svg-wrapper">
          <div>
            <img src="<%= svg %>" alt="<%= svg.split('/').pop() %>"/>
          </div>
        </div>
      <% }) %>
    </div>

    <script>
      var size = Math.min(window.innerHeight, window.innerWidth / <%= aspectRatio %>);
      var container = document.querySelector('.container');
      container.style.width = (size * <%= aspectRatio %>).toString() + 'px';
      container.style.height = size.toString() + 'px';
      container.style.display = 'block';
    </script>
  </body>
</html>
